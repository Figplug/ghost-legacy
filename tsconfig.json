{
	"compilerOptions": {
		// "rootDir": "src",
		"lib": ["dom", "es2017"],
		"strict": true,
		"esModuleInterop": true,
    "resolveJsonModule": true,
		"moduleResolution": "node",
		"target": "es6",
		"typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
		"outDir": "dist",
		"noEmit": false,
		"allowSyntheticDefaultImports": true
		
	},
	"include": [
		"src/**/*.ts", "src/**/*.tsx"
	],
	"exclude": ["**/**/node_modules", "**/*.test.ts", "dist"]
}
